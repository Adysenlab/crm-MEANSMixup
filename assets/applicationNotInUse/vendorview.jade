vendorview.jade
p
    #inside
    #header
        h2 Vendors
            | - Jade VendorView

    #main-content

        h2 ng-grid
        input.search-query(style='width:100px', type='text', ng-model='gridOptions1.filterOptions.filterText', placeholder='Filter')
        a.btn.btn-sm.btn-primary(ng-click='new()') New
        //button(ng-click='save()') Save
        button(ng-click='refresh()') Refresh
        //button(ng-click='changeGrid()') ChangeGrid
        //button(ng-click='testRoute()') testRoute /meetings/10/11/12
        // button(ng-click='findPO()') Find ALl PO's

        div(class="selectedItems")
         //{{mySelections}}
         // {{vendor | json }}
        div(style='width: 100%; height: 350px;',class="gridStyle", ng-grid='gridOptions1')
    hr
    tabset
        tab(heading='PO', height='300px') PO content
         //{{pords}}
         .span11
            table.table.table-striped(data-ng-hide="loading")

                thead
                    col(style='width: 15%;')
                    col(style='width: 35%;')
                    col(style='width: 25%;')
                    col(style='width: 25%;')

                    tr
                        th #
                        th acctDesc
                        th POTotal
                        th VendorInvNum

                tbody
                    tr(data-ng-repeat="po in pords")
                        td {{ po.PONumber }}
                        td {{ po.acctDesc }}
                        td {{ po.POTotal }}
                        td {{ po.VendorInvNum }}

    #footer

        a.copyright(target='_blank', href='http://sailsjs.com') Built with Sails.js
